{
  "name": "serc-2025",
  "version": "1.0.0",
  "description": "A Wordpress theme for the Systems Engineering Research Center (SERC)",
  "main": "src/js/main.js",
  "type": "module",
  "scripts": {
    "watch": "chokidar '**/*.{js,css,php,html}' '!wp-content/themes/serc-2025/dist/**/*' -c 'npm run build'",
    "sync": "browser-sync start --proxy 'serc.ddev.site' --files 'wp-content/themes/serc-2025/dist/**/*'",
    "dev": "npm run sync & npm run watch",
    "build": "vite build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Studio Lekker",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^3.0.3",
    "chokidar-cli": "^3.0.0",
    "vite": "^6.1.0"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.0.7",
    "tailwindcss": "^4.0.7"
  }
}